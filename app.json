{
  "expo": {
    "name": "Pebbit",
    "slug": "pebbit",
    "version": "0.9.5",
    "orientation": "portrait",
    "icon": "./src/assets/images/appIcon.png",
    "scheme": "pebbit",
    "owner": "magna-numeris",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.magnanumeris.pebbit",
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSCameraUsageDescription": "We need to access user's picture / camera in order to allow them to publish their item on the application. The pictures will be displayed on the listing of the application and on the sales section"
      }
    },
    "android": {
      "package": "com.magna_numeris.pebbit",
      "versionCode": 5
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./src/assets/images/icon.png",
          "color": "#ffffff",
          "sounds": ["./src/assets/sounds/rock-debris-spill-SBA-300114527.wav"]
        }
      ]
    ]
  }
}
